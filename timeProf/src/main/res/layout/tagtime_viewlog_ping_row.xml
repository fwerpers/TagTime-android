<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/viewlog_row_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/viewlog_row_tags"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dip"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/viewlog_row_beeminder"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_margin="1dip"
        android:background="@drawable/beeminder_transparent" />

    <TextView
        android:id="@+id/viewlog_row_beeminder_red"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_margin="1dip"
        android:background="@drawable/beeminder_transparent_red" />
</LinearLayout>